@using EPiServer.Framework.Web.Mvc.Html
@using EPiServer.Core
@using PizzeriaEpiserverSite.Models.ViewModels
@using PizzeriaEpiserverSite.Models.Pages
@model IPageViewModel<SitePageData>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title - My ASP.NET Application</title>*@
    <title>@Model.CurrentPage.Name</title>
    <link rel="stylesheet" href="https://www.w3schools.com/lib/w3.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    @Html.RenderEPiServerQuickNavigator()
    @Html.FullRefreshPropertiesMetaData()
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div id="navbarContainer" class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.PageLink("TOMASOS PIZZERIA", ContentReference.StartPage, new { area = "" }, new{@class = "navbar-brand"})
                @*@Html.ActionLink("TOMASOS PIZZERIA", ContentReference.StartPage, new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                 <ul class="nav navbar-nav navbar-right">
                      @{ Html.RenderPartial("_Navigation", "Model");}
                </ul>
            </div>
        </div>
    </div>


     <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>